<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/view_tab_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/mainColor"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_one"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FF0000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_tab_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/mainColor"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_two"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_rewards" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FFFF00" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_tab_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/mainColor"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_three"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#32CD32" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_tab_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/mainColor"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_four"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#0000CD" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>